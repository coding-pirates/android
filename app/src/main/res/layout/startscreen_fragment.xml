<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewmodel"
            type="de.upb.codingpirates.battleships.android.startscreen.StartScreenViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/sot2_background">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintVertical_bias="0.786">

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="77dp"
                android:layout_height="85dp"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/icons8_einstellungen"
                tools:ignore="VectorDrawableCompat"
                android:layout_weight="1"
                android:onClick="@{viewmodel::settingsButtonClicked}"/>

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="326dp"
                android:layout_height="85dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:background="@android:color/transparent"
                android:onClick="@{viewmodel::playButtonClicked}"
                app:srcCompat="@mipmap/spielen_schriftzug"
                android:layout_weight="2"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="370dp"
            android:layout_height="304dp"
            android:layout_marginTop="56dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.487"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/coding_pirates_logo" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>