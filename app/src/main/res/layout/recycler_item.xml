<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:background="#00000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/lobbyGameName"
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:text="@string/gameName"
            android:textColor="@color/color_light_brown"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="34dp"
            android:layout_height="match_parent"
            android:background="@color/color_light_brown"
            app:srcCompat="@drawable/ic_time_icon" />

        <TextView
            android:id="@+id/lobbyGameStatus"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="@string/gameState"
            android:textColor="@color/color_light_brown"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="34dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_player_icon" />

        <TextView
            android:id="@+id/lobbyPlayerCount"
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:text="@string/countPlayer"
            android:textColor="@color/color_light_brown" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="34dp"
            android:layout_height="match_parent"
            android:background="@color/color_light_brown"
            app:srcCompat="@drawable/ic_mapsize_icon" />

        <TextView
            android:id="@+id/lobbyFiledSize"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:text="@string/fieldSize"
            android:textColor="@color/color_light_brown" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
